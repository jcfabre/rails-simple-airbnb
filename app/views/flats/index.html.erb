
<div class="wrapper">
  <div class="container">
    <h1>All our flats</h1>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="flat-card">
            <div class="flat-card-image" style="background-image: url(<%= flat.picture_url %>)"></div>
            <div class="flat-card-content">
              <div class="flat-card-title">
                <h4> <%= flat.name %></h4>
              </div>
              <p> <%= flat.address %> </p>
              <div class="flex">
                <div class="flex-icon">
                  <i class="fas fa-user"></i>
                  <span> <%= flat.number_of_guests %></span>
                </div>
                <div class="flex-icon">
                  <i class="fas fa-euro-sign"></i>
                  <span> <%= flat.price_per_night %></span>
                </div>
              </div>
            </div>
            <div class="flat-card-actions">
              <%= link_to "More info", flat_path(flat) %>
              <a href="">Edit</a>
              <%= link_to "Remove", flat_path(flat), method: :delete %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



